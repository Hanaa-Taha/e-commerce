<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>farmer house-product page</title>
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/css/testStore.css">

</head>
<body>
    <partial name="_header" />
    <div class="head">
        <h1>متجرنا</h1>

    </div>


    <!--product page starts-->
    <section class="product-page">

        <div class="box-container">
            <form asp-action="Detail" method="post" enctype="multipart/form-data">

                <div class="image"><img src="@Model.ProductImage" width="100%" height="250px" style="border-radius: 5px;border: 1px solid #efefef" /></div>

                <div class="content">
                    <h3>
                        <label asp-for="ProductName"> اسم المنتج : </label>
                        <input type="hidden" asp-for="ProductId" />
                        <input asp-for="ProductName" readonly="readonly" style="background-color: #d3eac0; font-size: 5rem; font-weight: bold; color: #3a290f; " />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </h3>
                    <div class="price">
                        <label asp-for="Price" style="font-weight: bold;">  السعر : </label>
                        <input asp-for="Price" readonly="readonly" style="background-color: #d3eac0;font-size: 3.5rem;color: #3a290f;" />
                        <span asp-validation-for="Price" class="text-danger"></span>

                    </div>
                    <div class="price">
                        <label asp-for="Category.CategoryName" style="font-weight: bold;"> فئة المنتج :</label>
                        <input asp-for="Category.CategoryName" readonly="readonly" style="background-color: #d3eac0;font-size: 3.5rem;color: #3a290f;" />
                        <span asp-validation-for="CategoryId" class="text-danger"></span>

                    </div>
                    <div class="seller">
                        <a href="#"><i class="fas fa-id-badge"></i>اسم البائع</a>
                        <a href="#"><i class="fas fa-shopping-basket"></i>110</a>
                        <a href="#"><i class="fas fa-star"></i>5</a>
                    </div>
                </div>

                <div class="desc">

                    <div>
                        <h4>
                            <label asp-for="Description">وصف المنتج</label>
                        </h4>
                        <p>
                            <input asp-for="Description" readonly="readonly" style="background-color: #d3eac0; font-size: 3rem; color: #3a290f;" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </p>

                    </div>

                    <input type="submit" class="btn btn-info form-control "  value="اضف الى العربة" />


                </div>

            </form>
        </div>
</section>

    <!--product page ends-->







    
    <section class="footer">

        <div class="box-container">

            <div class="box">
                <h3>روابط سريعة</h3>
                <a href="/store"> <i class="fas fa-tractor"></i> الصفحة الرئيسية </a>
                <a href="/store/shop"> <i class="fas fa-tractor"></i> المتجر</a>
                <a href="/store/features"> <i class="fas fa-tractor"></i> المميزات</a>
                <a href="/store/about"> <i class="fas fa-tractor"></i> معلومات عنا</a>
                <a href="/store/review"> <i class="fas fa-tractor"></i>المراجعات</a>
                <a href="/store/blog"> <i class="fas fa-tractor"></i> المقالات</a>
                <a href="/store/contact"> <i class="fas fa-tractor"></i>  اتصل بنا</a>
            </div>

            <div class="box">
                <h3>روابط إضافية</h3>
                <a href="#"> <i class="fas fa-tractor"></i> طلبي</a>
                <a href="#"> <i class="fas fa-tractor"></i> حسابي </a>
                <a href="#"> <i class="fas fa-tractor"></i> المفضلة </a>
                <a href="#"> <i class="fas fa-tractor"></i> farmer friend تطبيق </a>
                <a href="#"> <i class="fas fa-tractor"></i> farmer club تطبيق </a>
                <a href="#"> <i class="fas fa-tractor"></i>فريقنا  </a>
            </div>

            <div class="box">
                <h3>تابعنا</h3>
                <a href="#"> <i class="fab fa-facebook-f"></i> facebook </a>
                <a href="#"> <i class="fab fa-twitter"></i> twitter </a>
                <a href="#"> <i class="fab fa-instagram"></i> instagram </a>
                <a href="#"> <i class="fab fa-linkedin"></i> linkedin </a>
                <a href="#"> <i class="fab fa-pinterest"></i> pinterest </a>
            </div>
        </div>
    </section>

    <!-- footer section ends -->
    <!-- custom js file link  -->
    <script src="~/js/testStore.js"></script>
</body>
</html>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}








