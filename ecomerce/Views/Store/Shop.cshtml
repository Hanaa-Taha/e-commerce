@{ }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>farmer house-shop</title>
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/css/testStore.css">

</head>
<body>

    <!-- header section starts  -->

    <partial name="_header" />

    <!-- header section ends -->
    <!--head part-->
    <div class="head">
        <h1>متجرنا</h1>
        <!-- <p> <a href="home.html">الصفحة الرئيسية >></a> المتجر </p>-->

    </div>


    <!--shop section starts-->
    <!--category section starts-->
    <section class="category">

        <h1 class="title">  <span>مجموعاتنا</span> </h1>

        <div class="box-container">

            @*<a href="#" class="box">
                <img src="~/lib/Images/vegetables.png" alt="">
                <h3>الخضراوات</h3>
            </a>

            <a href="#" class="box">
                <img src="~/lib/Images/fruits.png" alt="">
                <h3>الفاكهة</h3>
            </a>*@

            <a href="#" class="box">
                <img src="~/lib/Images/seeds.png" alt="">
                <h3>البذور</h3>
            </a>

            <a href="#" class="box">
                <img src="~/lib/Images/fertilizer.png" alt="">
                <h3>الأسمدة</h3>
            </a>

            <a href="#" class="box">
                <img src="~/lib/Images/tools.png" alt="">
                <h3>الأدوات</h3>
            </a>

        </div>

    </section>

    <!--category section ends-->
    <!--product section starts-->

    <section class="products">

        <h1 class="title"> <span>منتجاتنا</span></h1>

        <div class="box-container">
            @foreach (var item in Model)
            {
                <div class="box">
                    <div class="icons">
                        <a href="#" class="fas fa-heart"></a>
                        <a href="#" class="fas fa-eye"></a>
                    </div>
                    <div class="image">
                        @if (item.ProductImage != null)
                        {
                            <img src="@(item.ProductImage)" alt="">}
                    </div>
                    <div class="content">
                        <h3> @Html.DisplayFor(modelItem => item.ProductName)</h3>
                        <div class="price">$@Html.DisplayFor(modelItem => item.Price)</div>

                        <div class="seller">
                            <a href="#"><i class="fas fa-id-badge"></i>اسم البائع</a>
                            <a href="#"><i class="fas fa-shopping-basket"></i>110</a>
                            <a href="#"><i class="fas fa-star"></i>5</a>
                        </div>

                    </div>
                    <a>
                        
                        <a asp-action="Detail" asp-route-id="@item.ProductId">
                            
                            
                            <div class="btn cart">
                                <i class="fas fa-shopping-cart"></i> تفاصيل المنتج
                            </div>
                        </a>
                </div>}
            

            


        </div>

    </section>



    <!--product section ends-->
    <!--shop section ends-->
    <!-- footer section starts  -->

    <section class="footer">

        <div class="box-container">

            <div class="box">
                <h3>روابط سريعة</h3>
                <a href="/store"> <i class="fas fa-tractor"></i> الصفحة الرئيسية </a>
                <a href="/store/shop"> <i class="fas fa-tractor"></i> المتجر</a>
                <a href="/store/features"> <i class="fas fa-tractor"></i> المميزات</a>
                <a href="/store/about"> <i class="fas fa-tractor"></i> معلومات عنا</a>
                <a href="/store/review"> <i class="fas fa-tractor"></i>المراجعات</a>
                <a href="/store/blog"> <i class="fas fa-tractor"></i> المقالات</a>
                <a href="/store/contact"> <i class="fas fa-tractor"></i>  اتصل بنا</a>
            </div>

            <div class="box">
                <h3>روابط إضافية</h3>
                <a href="#"> <i class="fas fa-tractor"></i> طلبي</a>
                <a href="#"> <i class="fas fa-tractor"></i> حسابي </a>
                <a href="#"> <i class="fas fa-tractor"></i> المفضلة </a>
                <a href="#"> <i class="fas fa-tractor"></i> farmer friend تطبيق </a>
                <a href="#"> <i class="fas fa-tractor"></i> farmer club تطبيق </a>
                <a href="#"> <i class="fas fa-tractor"></i>فريقنا  </a>
            </div>

            <div class="box">
                <h3>تابعنا</h3>
                <a href="#"> <i class="fab fa-facebook-f"></i> facebook </a>
                <a href="#"> <i class="fab fa-twitter"></i> twitter </a>
                <a href="#"> <i class="fab fa-instagram"></i> instagram </a>
                <a href="#">
                    <i class="fab fa-linkedin"></i>

                    > هناء طه ان:
                    linkedin
                </a>
                <a href="#"> <i class="fab fa-pinterest"></i> pinterest </a>
            </div>
        </div>

    </section>

    <section class="credit">created by Hend EL_Ghandour </section>


    <!-- footer section ends -->
    <!-- loader part  -->
    <div class="loader-container">
        <img src="~/lib/Images/farm.gif" alt="">
    </div>

    <!-- js file link  -->
    <script src="~/js/testStore.js"></script>
</body>
</html>
