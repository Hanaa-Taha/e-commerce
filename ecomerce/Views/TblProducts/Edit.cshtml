@model ecomerce.Model.TblProduct

@{ ViewData["Title"] = "Edit"; }


<!DOCTYPE html>
<html lang="en" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Teko:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/add.css">



    <title>Edit product</title>
</head>

<body>

    <partial name="_header" />
    

    <div class="container card-0 justify-content-center ">
        <div class="card-body px-sm-4 px-0">
            <div class="row justify-content-center mb-5">
                <div class="col-md-10 col">
                    <h3 class="font-weight-bold ml-md-0 mx-auto text-center text-sm-left"> تعديل منتج </h3>
                </div>
            </div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row justify-content-center round">
                    <div class="col-lg-10 col-md-12 ">
                        <div class="card shadow-lg card-1">
                            <div class="card-body inner-card">
                                <div class="row justify-content-center">
                                    <div class="col-lg-5 col-md-6 col-sm-12">
                                        <input type="hidden" asp-for="ProductId" />
                                        <div class="form-group">
                                            <label asp-for="ProductName" for="first-name" class="control-label">إسم المنتج</label>
                                            <input asp-for="ProductName" type="text" class="form-control" id="first-name" />
                                            <span asp-validation-for="ProductName" class="text-danger"></span>
                                        </div>

                                        <div class="form-group" hidden>
                                            <label asp-for="VendorId" for="first-name" class="control-label"></label>
                                            <select asp-for="VendorId" class="form-control" asp-items="ViewBag.VendorId" id="first-name"></select>
                                            <span asp-validation-for="VendorId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="CategoryId" for="inputEmail4" class="control-label">فئة المنتج</label>
                                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group" hidden>
                                            <label asp-for="IsActive" class="control-label"></label>
                                            <input asp-for="IsActive" class="form-control" />
                                            <span asp-validation-for="IsActive" class="text-danger"></span>
                                        </div>
                                        <div class="form-group" hidden>
                                            <label asp-for="IsDelete" class="control-label"></label>
                                            <input asp-for="IsDelete" class="form-control" />
                                            <span asp-validation-for="IsDelete" class="text-danger"></span>
                                        </div>
                                        <div class="form-group" hidden>
                                            <label asp-for="CreatedDate" class="control-label"></label>
                                            <input asp-for="CreatedDate" class="form-control" disabled />
                                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                                        </div>
                                        <div class="form-group" hidden>
                                            <label asp-for="ModifiedDate" class="control-label"></label>
                                            <input asp-for="ModifiedDate" class="form-control" />
                                            <span asp-validation-for="ModifiedDate" class="text-danger"></span>
                                        </div>
                                        <div class="form-group" hidden>
                                            <label asp-for="ProductImage" class="control-label">صورة المنتج</label>
                                            <input asp-for="ProductImage" class="form-control" />
                                            <span asp-validation-for="ProductImage" class="text-danger"></span>
                                        </div>






                                    </div>
                                    <div class="col-lg-5 col-md-6 col-sm-12">








                                        <div class="form-group">
                                            <label asp-for="Price" for="Evaluate Budget" class="control-label">سعر المنتج</label>
                                            <input asp-for="Price" type="text" class="form-control" id="Evaluate Budget" placeholder="">
                                            <span asp-validation-for="Price" class="text-danger"></span>

                                        </div>
                                        <div class="form-group">
                                            <label for="Evaluate Budget" asp-for="Quantity" class="control-label">الكمية</label>
                                            <input asp-for="Quantity" type="text" class="form-control" id="Evaluate Budget" placeholder="">
                                            <span asp-validation-for="Quantity" class="text-danger"></span>
                                        </div>

                                        
                                        <div class="form-group"hidden>
                                            <label asp-for="IsFeatured" class="control-label" ></label>
                                            <input asp-for="IsFeatured" class="form-control" />
                                            <span asp-validation-for="IsFeatured" class="text-danger" ></span>
                                        </div>

                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <div class="col-md-12 col-lg-10 col-12">


                                        



                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <div class="col-md-12 col-lg-10 col-12">
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea2" asp-for="Description" class="control-label">وصف المنتج</label>
                                            <input asp-for="Description" class="form-control" id="exampleFormControlTextarea2" />
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>


                                        <div class="mb-2 mt-4">
                                            <div class="text-right">
                                                <input type="submit" value="تعديل" class="btn btn-outline-success" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <br />
                                    <h3><a asp-action="Delete" asp-route-id="@Model.ProductId"> حذف المنتج</a></h3>
                                    <br />
                                    <h3><a asp-action="Index">العوده إلى قائمة المنتجات</a></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src='https://cdn.jsdelivr.net/npm/moment@2.29.1/min/moment.min.js'></script>




</body>

</html>
