<!doctype html>
<html lang="en">
<head>
    <title>Products Table</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/css/tblProductsStyle.css">

    

</head>
<body>
    <partial name="_header" />
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-4">
                    <h2 class="heading-section" style="color:gray">منتجاتك</h2>
                    <img src="~/lib/Images/Online shopping-bro.png" class="image" alt="" />

                </div>
                <br />
            </div>
            <div class="row">
                <div class="col-md-12">
                    
                    <div class="table-wrap">
                        <p>
                            <a asp-action="Create">انشئ منتج جديد</a>
                            <br />
                        </p>

                        
                        <table class="table">
                            <thead class="thead-primary">
                                <tr>
                                    <th>صورة المنتج</th>
                                    <th>إسم المنتج</th>
                                    <th>الفئة</th>
                                    <th>السعر</th>
                                    <th>الكمية</th>
                                    <th>الوصف</th>
                                    <th>تاريخ الإنشاء</th>
                                    <th>تاريخ التعديل</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                    <tr class="alert" role="alert">
                        <td>
                            <div class="image">
                                @if (item.ProductImage != null)
                                {
                                    <img src="@(item.ProductImage)" alt="">}
                            </div>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.ModifiedDate)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProductId">تعديل</a>
                            <br />
                            <a asp-action="Details" asp-route-id="@item.ProductId">تفاصيل</a>
                            <br />
                            <a asp-action="Delete" asp-route-id="@item.ProductId">حذف</a>
                        </td>
                    </tr>
}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="~/js/tblProductsmain.js"></script>

</body>
</html>

